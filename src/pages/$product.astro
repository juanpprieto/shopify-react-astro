---
const { collection } = Astro.props;
import ProductPageContent from '../components/ProductPageContent.jsx';
import MainLayout from '../layouts/main.astro'

export async function createCollection() {

  let products = await fetch(`${import.meta.env.NETLIFY_URL}/.netlify/functions/get-product-list`)
    .then(res => res.json()).then((response) => {
      return response.products.edges
    });

  return {
    // `routes` defines the total collection of routes as data objects.
    routes: products.map((p, i) => {
      const params = {handle: p.node.handle, index: i};
      return params;
    }),
    permalink: ({ params }) => {
      return `/product/${params.handle}`
    },
    async data({ params }) {
      // return products.filter((p) => {
      //   return p.node.handle === params.handle;
      // });

      const fullProductResponse = await fetch(`${import.meta.env.NETLIFY_URL}/.netlify/functions/get-product?handle=${params.handle}`)
      const fullProduct = await fullProductResponse.json()
      return fullProduct

    },
    pageSize: Infinity,
  };
}
---
<MainLayout title={'product'}>
  <ProductPageContent:visible product={collection.data[0]} />
</MainLayout>